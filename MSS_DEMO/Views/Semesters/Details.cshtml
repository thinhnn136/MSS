@model MSS_DEMO.Models.Semester

@{
    ViewBag.Title = "Details";
}

<h2>Details Semester</h2>
@{
    string dateEnd = Convert.ToDateTime(Model.End_Date).ToString("dd/MM/yyyy");
    string dateStart = Convert.ToDateTime(Model.Start_Date).ToString("dd/MM/yyyy");
}
<div>   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Semester Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Semester_Name)
        </dd>

        <dt>
           Start Date
        </dt>

        <dd>
           @dateStart
        </dd>

        <dt>
           End Date
        </dt>

        <dd>
            @dateEnd
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Semester_ID }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Semester_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
