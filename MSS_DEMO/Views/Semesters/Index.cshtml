@model IEnumerable<MSS_DEMO.Core.Components._Semester>

@{
    ViewBag.Title = "Semester";
}
<br />
<span>@Html.ActionLink("Home", "Index", "Home") > @Html.ActionLink("Setup for the new semester", "Index", "SetupBeginSemester") > Semester</span>

<hr />
<p>
    @Html.ActionLink("Add New", "Create")
</p>
@{ 
    int stt = 1;
}
<table class="table table-bordered table-striped">
    <tr>
        <th>No</th>
        <th>
            Semester ID
        </th>
        <th>
            Semester Name
        </th>
        <th>
            Start Date 
        </th>
        <th>
            End Date 
        </th>

    </tr>

    @foreach (var item in Model)
    {       
<tr>
    <td>@(stt++)</td>
    <td>
        @Html.ActionLink(item.Semester_ID, "Details", new { id = item.Semester_ID })
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Semester_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.dateStart)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.dateEnd)
    </td>
</tr>
    }

</table>
