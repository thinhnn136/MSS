@model IEnumerable<MSS_DEMO.Models.Specification>

@{
    ViewBag.Title = "Specification";
}
<br/>
<span>@Html.ActionLink("Home", "Index", "Home") > @Html.ActionLink("Setup the beginning of the semester", "Index", "SetupBeginSemester") > Specification</span>
<hr/>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Specification_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specification_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Is_Real_Specification)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var check = item.Is_Real_Specification == true ? "Yes" : "No";
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Specification_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specification_Name)
            </td>
            <td>
                @check
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Specification_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Specification_ID })
            </td>
        </tr>
    }

</table>
