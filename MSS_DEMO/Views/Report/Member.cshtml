
@model MSS_DEMO.Models.ListStudent


@{
    ViewBag.Title = "Member";
}
<div>
    <div>
        <h4>
            @Html.ActionLink("Sumary reports", "Index")&nbsp;&nbsp;
            @Html.ActionLink("No Enrollment", "Enrollment")&nbsp;&nbsp;
            @Html.ActionLink("Member Report", "Member")&nbsp;&nbsp;
            @Html.ActionLink("NotRequiredCourse", "NotRequiredCourse")&nbsp;&nbsp;
        </h4>
    </div>
    <br />
    <div class="panel panel-default">
        <div class="panel-body" style="padding-top: initial;">

            @using (Html.BeginForm("Member", "Report", FormMethod.Get))
            {
                <div class="form-group">
                    <div class="col-md-2">
                        <label class="control-label"> Search by Roll Number</label>
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBox("SearchString")
                        @Html.Hidden("searchCheck", "true")
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <div class="col-md-2">
                        <label class="control-label"> Search by Subject </label>
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownList("SelectString3", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <div class="col-md-2">
                        <label class="control-label"> Search by Campus </label>
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownList("SelectString2", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        <input class="btn btn-default" type="submit" value="Search" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@if (Model != null)
{
<div>
    @if (Model.ls1.Count > 0)
    {
        <h4>Total of the records: @ViewBag.TotalSearch</h4>
        <table class="table table-bordered table-striped">
            <tr>
                <th>STT</th>
                <th>Email</th>
                <th>Roll</th>
                <th>Full_Name</th>
                <th>Campus</th>
                <th>Subject</th>
            </tr>
            @{ int a = 1;}
            @foreach (var t in Model.ls1)
            {
                <tr>
                    <th>@(a++)</th>
                    <th>@Html.DisplayFor(m => t.Email)</th>
                    <th>@Html.DisplayFor(m => t.Roll)</th>
                    <th>@Html.DisplayFor(m => t.Full_Name)</th>
                    <th>@Html.DisplayFor(m => t.Campus)</th>
                    <th>
                        @foreach (var d in t.ListSubject)
                        {
                            @Html.DisplayFor(m => d)
                            <br />
                        }
                    </th>
                </tr>
            }
        </table>
    }
</div>
}
<br />

