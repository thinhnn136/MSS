@model PagedList.IPagedList<MSS_DEMO.Models.Subject>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Subject";
}
<br />
<span>@Html.ActionLink("Home", "Index", "Home") > @Html.ActionLink("Setup the beginning of the semester", "Index", "SetupBeginSemester") > Subject</span>
<hr />
<div class="form-group">
    @using (Html.BeginForm("Index", "Subjects", FormMethod.Post))
    {
        <div class="col-md-2">
            @Html.TextBox("SearchString", "", new { @class = "form-control", @placeholder = "Search With ID" })
        </div>
        <div class="col-md-1">
            <input class="btn btn-sm" type="submit" value="Search" />
        </div>
        <div class="col-md-1">
            @Html.ActionLink("Add New", "Create")
        </div>
        <div class="col-md-5"></div>
    }
</div>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>
            Subject ID
        </th>
        <th>
            Subject Name
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Subject_ID, "Details", new { id = item.Subject_ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject_Name)
            </td>

        </tr>
    }

</table>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))