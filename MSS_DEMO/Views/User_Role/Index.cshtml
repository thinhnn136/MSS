@model IEnumerable<MSS_DEMO.Models.User_Role>

@{
    Layout = null;
}

<!DOCTYPE html>
<br />
<span>@Html.ActionLink("Home", "Index", "Home") > User Management</span>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>User Mangement</h1>
    <p>
        @using (Html.BeginForm("Index", "User_Role", FormMethod.Post))
        {
            <input type="text" name="SearchString" />
            <button type="submit">Search</button>
            @Html.ActionLink("Add new user", "Create")

        }

    </p>
    @if (Model != null)
    {
        <table class="table" border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.isActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role.Role_Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.Role_Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.User_ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.User_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.User_ID })
                    </td>
                </tr>
            }

        </table>
    }
</body>
</html>
