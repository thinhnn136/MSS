@model MSS_DEMO.Models.Student

@{
    ViewBag.Title = "Details";
}

<h2>Details Student</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
           Roll
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Roll)
        </dd>
        <dt>
           Full Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Full_Name)
        </dd>
        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Campus ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Campus_ID)
        </dd>
        <dt>
            Subject
        </dt>

        <dd>
            @ViewBag.Subject
        </dd>
        <dt>
           Semester
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Semester_ID)
        </dd>
    </dl>
</div>
@{ 
    var id = Model.Roll + "^" + Model.Semester.Semester_ID;
}
<p>
    @Html.ActionLink("Edit", "Edit", new { id = id }) |
    @Html.ActionLink("Delete", "Delete", new { id = id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
